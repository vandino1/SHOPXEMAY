@model EditRoleViewModel

@{
    ViewBag.Title = "Cập nhật Role";
}

<h1 class="text-primary">Cập nhật Role</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            @*<span class="badge bg-white text-danger">Role</span>*@
            <button type="submit" class="btn btn-warning"><i class="bi bi-pencil-square"></i>Cập nhật</button>
            <a asp-action="ListRoles" class="btn btn-info"><i class="bi bi-x-octagon"></i> Hủy</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="text-secondary">Danh sách Username có Role(vai trò)</h3>
        </div>

        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Role chưa có tài khoản nào</h5>
            }

        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="Admin"
               asp-route-roleId="@Model.Id" class="btn btn-success" style="width:auto"><i class="bi bi-plus-circle"></i> Thêm hoặc xóa người dùng</a>
        </div>
    </div>
</form>