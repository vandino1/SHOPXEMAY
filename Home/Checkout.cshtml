@model List<HondaVN.Models.CartItem>
@{
    decimal total = 0; // tổng tiền
    int num = 1; //số thứ tự
                 //int total = 0; // tổng tiền
}

<h3 class="text-secondary">Vui lòng kiểm tra lại đơn hàng và nhập đầy đủ thông tin</h3>
<div class="row">
    <div class="col">
        <h4 class="text-danger">Thông tin đơn hàng</h4>
        <table class="table table-bordered">
            <tr class="bg-info text-center">
                <th>STT</th>
                <th>Sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
               
            </tr>
            @foreach (var cartitem in Model)
            {
                var amount = cartitem.Quantity * cartitem.Product.Price;//Thành tiền
                total += amount;

                <tr>
                    <td>@(num++)</td>
                    <td>
                        <img src="~/images/@cartitem.Product.Image" class="img-thumbnail" width="30" />
                        @cartitem.Product.Name
                    </td>
                    <td>@(cartitem.Product.Price.ToString("n0"))</td>
                    <td>
                        @(cartitem.Quantity)
                    </td>
                    <td>@(amount.ToString("n0"))</td>
                   
                </tr>
            }
            <tr>
                <td colspan="4" class="text-end">Tổng tiền</td>
                <td colspan="1"><strong class="text-danger">@(total.ToString("n0"))</strong></td>

            </tr>

        </table>
    </div>
    <div class="col">
        <h4 class="text-dark">Thông tin khách hàng</h4>
        <form asp-action="CreateBill">

            <input type="hidden" name="billTotal" value="@total"/>
            <div class="mb-3">
                <label>Họ tên</label>
                <input name="cusName" class="form-control" type="text" />
            </div>
            <div class="mb-3">
                <label>Điện thoại</label>
                <input name="cusPhone" class="form-control" type="text" />
            </div>
            <div class="mb-3">
                <label>Địa chỉ</label>
                <textarea name="cusAddress" class="form-control"></textarea>
            </div>
            <div class="mb-3">        
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-square-fill"></i> Xác nhận đơn hàng</button>
            </div>
        </form>

    </div>
</div>
